---
import ExpressIcon from "./icons/Express.astro";
import GraphqlIcon from './icons/GraphQL.astro';
import MuiIcon from "./icons/MaterialUi.astro";
import NextJsIcon from "./icons/NextJs.astro";
import ReactIcon from "./icons/React.astro";
import TailwindIcon from "./icons/Tailwind.astro";
import TypeScriptIcon from "./icons/TypeScript.astro";

const TECHNOLOGIES = {
  "Next.js": { icon: NextJsIcon, color: "bg-black text-white" },
  "TypeScript": { icon: TypeScriptIcon, color: "bg-blue-600 text-white" },
  "React": { icon: ReactIcon, color: "bg-blue-500 text-white" },
  "Tailwind CSS": { icon: TailwindIcon, color: "bg-[#003159] text-white" },
  "MUI": { icon: MuiIcon, color: "bg-[#025f8a] text-white" },
  "Express": { icon: ExpressIcon, color: "bg-green-800 text-white" },
  "GraphQL": { icon: GraphqlIcon, color: "bg-pink-400 text-white" }
};

const PROJECTS = [
  {
    title: "TERCO - A full web application for managing a agreements in a company",
    description: "A full web application for managing a agreements in a company",
    technologies: ["Next.js", "MUI", "Express", "GraphQL"],
    liveDemo: "",
    viewCode: "",
    image: "/images/shots_so_p1.jpeg"
  },
  {
    title: "MedicGeeks - A platform for doctors for managing their patients",
    description: "A platform for doctors for managing their patients, with a calendar for scheduling appointments, notifications, and more",
    technologies: ["React", "Bootstrap", "NestJS",],
    liveDemo: "https://medicgeekapp.com/",
    viewCode: "",
    image: "/images/shots_so_p2.jpeg"
  }
];
---


<!-- <section class="py-16"> -->
  <div class="max-w-4xl mx-auto px-4">
          <!-- Projects Badge -->
          <div class="flex justify-center mb-4">
            <span
              class="bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 text-sm font-medium px-3 py-1 rounded-full border border-gray-200 dark:border-gray-700"
            >
              Projects
            </span>
          </div>

          <!-- Main Title -->
          <div class="text-center mb-16">
            <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-4">
              Featured Work
            </h2>
            <p
              class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto"
            >
              Showcasing some of my best projects and technical achievements
            </p>
          </div>

  {PROJECTS.map((project) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
      <!-- Project Image (Left Side) -->
      <div class="w-full md:w-1/2">
        <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
          <img 
            src={project.image}
            alt={`${project.title} preview`}
            class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
            loading="lazy"
          />
        </div>
      </div>

      <!-- Project Content (Right Side) -->
      <div class="w-full md:w-1/2 md:max-w-lg">
        <!-- Title -->
        <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
          {project.title}
        </h3>

        <!-- Technology Tags -->
        <div class="flex flex-wrap mt-2">
          <ul class="flex flex-row mb-2 gap-x-2">
            {project.technologies.map((tech) => {
              const techInfo = TECHNOLOGIES[tech as keyof typeof TECHNOLOGIES];
              const IconComponent = techInfo?.icon;
              
              return (
                <li>
                  <span class={`flex gap-x-2 rounded-full text-xs ${techInfo?.color || 'bg-gray-600 text-white'} py-1 px-2`}>
                    {IconComponent && <IconComponent class="size-4" />}
                    {tech}
                  </span>
                </li>
              );
            })}
          </ul>
        </div>

        <!-- Description -->
        <div class="mt-2 text-gray-700 dark:text-gray-400">
          {project.description}
        </div>

        <!-- Action Buttons - Only show if URLs are available -->
        {(project.viewCode || project.liveDemo) && (
          <footer class="flex items-end justify-start mt-4 gap-x-4">
            {project.viewCode && (
              <a
                href={project.viewCode}
                class="inline-flex items-center gap-2 bg-gray-700 text-white px-4 py-2 rounded-lg font-medium hover:bg-gray-600 transition-colors duration-200 border border-gray-600"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 4.624-5.479 4.869.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                Code
              </a>
            )}
            
            {project.liveDemo && (
              <a
                href={project.liveDemo}
                target="_blank"
                class="inline-flex items-center gap-2 bg-white text-gray-900 px-4 py-2 rounded-lg font-medium hover:bg-gray-100 transition-colors duration-200"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
                Preview
              </a>
            )}
          </footer>
        )}
      </div>
    </article>
  ))}
  </div>
<!-- </section> -->
